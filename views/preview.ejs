<!-- Preview Container -->
<div id="previewContainer" class="preview-container" style="display: none;">
    <div class="preview-header">
        <div class="preview-title">
            <i class="fas fa-eye"></i> App Preview
        </div>
        <div class="preview-controls">
            <button class="preview-button secondary" onclick="refreshPreview()">
                <i class="fas fa-sync-alt"></i> Refresh
            </button>
            <button class="preview-button secondary" onclick="openInNewTab()">
                <i class="fas fa-external-link-alt"></i> Open in New Tab
            </button>
        </div>
    </div>
    
    <div class="file-selector" id="fileSelector" style="display: none;">
        <select id="htmlFileSelect" onchange="loadSelectedFile()">
            <option value="">Select HTML file to preview...</option>
        </select>
    </div>
    
    <div class="preview-content">
        <div id="previewLoading" class="preview-loading">
            <i class="fas fa-spinner fa-spin"></i> Loading preview...
        </div>
        
        <div id="previewError" class="preview-error" style="display: none;">
            <h3><i class="fas fa-exclamation-triangle"></i> Preview Error</h3>
            <p id="errorMessage">Unable to load preview</p>
        </div>
        
        <iframe id="previewIframe" class="preview-iframe" style="display: none;"></iframe>
    </div>
</div>
